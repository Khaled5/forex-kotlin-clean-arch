<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CustomLoginBtnStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">23dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="CurrencyDataStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:gravity">center</item>
    </style>

</resources>